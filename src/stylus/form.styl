button 
    background $primary
    color $selectColor
    padding $padding10 $padding20
    border-color $primary

label 
    font $h3/1rem "微软雅黑"

input 
    width 80%
    height 1rem
    font .25rem/.5rem "微软雅黑"
    color $fontColor1
    text-indent $padding10

.input 
    border-bottom 1px solid $fontColor1
    margin-top $margin10

.van-button--primary {
  width: 100%;
  height .9rem
  font $h2/.8rem "微软雅黑"
  background: $primary;
  border-radius: 0.1rem;
  margin-top: 20px;
}